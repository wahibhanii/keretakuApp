<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Route</title>
  </head>
  <body>
    <%include ../partials/style%>
    <%include ../partials/navigation%>
    <h1>Edit Route</h1>
      <form action="/routes/edit/<%=dataRoute.id%>" method="post">
        Departure:<br>
        <input type="text" name="departure" value="<%=dataRoute.departure%>"><br>
        Arrival:<br>
        <input type="text" name="arrival" value="<%=dataRoute.arrival%>"><br>
        <input type="submit" value="Submit">
      </form>
      <%if(err){%>
        <%=err%>
      <%}%>
  </body>
</html>
